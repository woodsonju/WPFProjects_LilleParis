<Window x:Class="AppQuizz.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppQuizz"
        mc:Ignorable="d"
        Title="QuizWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="TBTimer" />
        <TextBlock x:Name="TBQuizTitle" />
        <TextBlock x:Name="TBQuestionTitle" />

        <!--Contient la liste des réponses-->
        <StackPanel x:Name="PanelResponses" Orientation="Vertical">
            
        </StackPanel>
        <Button x:Name="btnNext" Content="Suivant" Click="btnNext_Click" />
    </StackPanel>
</Window>
